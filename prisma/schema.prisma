// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  boards    Board[]
  tenantId  String   @default("") // New field for tenant identification
}

model Board {
  id       Int      @id @default(autoincrement())
  name     String
  columns  Column[]
  userId   Int // User who owns the board
  user     User     @relation(fields: [userId], references: [id])
  tenantId String   @default("") // New field for tenant identification
}

model Column {
  id       Int    @id @default(autoincrement())
  name     String
  board    Board  @relation(fields: [boardId], references: [id])
  boardId  Int
  cards    Card[]
  tenantId String @default("") // New field for tenant identification
}

model Card {
  id          Int       @id @default(autoincrement())
  title       String
  typeId      Int // Foreign key referencing the CardType table
  type        CardType  @relation(fields: [typeId], references: [id])
  description String?
  column      Column    @relation(fields: [columnId], references: [id])
  columnId    Int
  assignee    String?
  dueDate     DateTime?
  createdDate DateTime  @default(now())
  tenantId    String    @default("") // New field for tenant identification
}

model CardType {
  id       Int    @id @default(autoincrement())
  name     String @unique
  cards    Card[]
  tenantId String @default("") // New field for tenant identification
}
